{% extends 'base.html.twig' %}

{% block title %}Seed index{% endblock %}

{% block body %}
    <h1>Seed index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Advice</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for seed in seeds %}
            <tr>
                <td>{{ seed.id }}</td>
                <td>{{ seed.name }}</td>
                <td>{{ seed.advice }}</td>
                <td>{{ seed.quantity }}</td>
                <td>
                    <a href="{{ path('seed_show', {'id': seed.id}) }}">show</a>
                    <a href="{{ path('seed_edit', {'id': seed.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('seed_new') }}">Create new</a>
{% endblock %}
